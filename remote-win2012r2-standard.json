{
  "variables": {
    "version": "0.1.0",
    "cm": "chef",
    "cm_version": "",
    "iso_url": "/distributions/iso/Win2012.iso",
    "iso_checksum": "85ffd43548204eb7fa31ab2d607a38cf",  
    "update": true,
    "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c 'Packer Shutdown'"
  },
  "builders": [
    {
      "remote_type": "esx5",
      "remote_host": "{{env 'ESX_HOST'}}",
      "remote_username": "root",
      "remote_password": "{{env 'ESX_PASS'}}",
      "remote_cache_datastore": "datastore1",
      "remote_cache_directory": "packer-cache",
      "output_directory": "win2012r2-standard_{{isotime}}",
      "vm_name": "win2012r2-standard",
      "type": "vmware-iso",
      "skip_compaction": true,
      "guest_os_type": "windows8srv-64",
      "iso_url": "{{ user `iso_url` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "md5",
      "ssh_username": "Administrator",
      "ssh_password": "password",
      "ssh_wait_timeout": "10000s",
      "floppy_files": [
      "floppy/win2012r2-standard/Autounattend.xml",
      "floppy/00-run-all-scripts.cmd",
      "floppy/install-winrm.cmd",
       "custom/wget.exe",       
        "floppy/powerconfig.bat",
        "floppy/01-install-wget.cmd",
        "floppy/_download.cmd",
        "floppy/_packer_config.cmd",
        "floppy/passwordchange.bat",
        "floppy/openssh.bat",
        "floppy/zz-start-sshd.cmd"
      ],
      "tools_upload_flavor": "windows",
      "shutdown_command": "{{ user `shutdown_command`}}",
      "disk_size": 40960,
      "vmx_data": {        
        "ethernet0.networkName": "VM Network",
        "memsize": "1536",
        "numvcpus": "1",
        "cpuid.coresPerSocket": "2",
        "scsi0.virtualDev": "lsisas1068"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "remote_path": "/tmp/script.bat",
      "environment_vars": [
        "CM={{user `cm`}}",
        "CM_VERSION={{user `cm_version`}}",
        "UPDATE={{user `update`}}"
      ],
      "execute_command": "{{.Vars}} cmd /c C:/Windows/Temp/script.bat",
      "scripts": [
       "custom/boot.cmd",
       "custom/server.cmd",  
       "custom/jenkins-slave.bat"
      ]
    },
    {
      "type": "shell",
      "inline": ["rm -f /tmp/script.bat"]
    }
  ]
}
