{
  "variables": {
    "version": "0.1.0",
    "cm": "chef",
    "cm_version": "",
    "iso_url": "/distributions/iso/Win7IE11-packer.iso",
    "iso_checksum_type": "md5",
    "iso_checksum": "de9ed0743581307fbcb5b12e0c54d4f1",
    "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c 'Packer Shutdown'",
    "update": false
  },
  "builders": [
    {
      "vm_name": "win7x86-pro",
      "type": "vmware-iso",
      "skip_compaction": true,
      "guest_os_type": "windows7",
      "iso_url": "{{ user `iso_url` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "md5",
      "ssh_username": "Administrator",
      "ssh_password": "password",
      "floppy_files": [
        "custom/wget.exe",
      
        "floppy/00-run-all-scripts.cmd",
        "floppy/install-winrm.cmd",
        "floppy/fixnetwork.ps1",
        "floppy/powerconfig.bat",
        "floppy/01-install-wget.cmd",
        "floppy/_download.cmd",
        "floppy/_packer_config.cmd",
        "floppy/passwordchange.bat",
        "floppy/networkprompt.bat",
        "floppy/openssh.bat",
        "floppy/zz-start-sshd.cmd"
      ],
      "tools_upload_flavor": "windows",
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "{{ user `shutdown_command`}}",
      "disk_size": 40960,
      "vmx_data": {
        "memsize": "1536",
        "numvcpus": "1",
        "cpuid.coresPerSocket": "1"
      }
    },
    {
      "vm_name": "win7x86-pro",
      "type": "virtualbox-iso",
      "guest_os_type": "Windows7",
      "iso_url": "{{ user `iso_url` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "sha1",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "10000s",
      "floppy_files": [
        "floppy/win7x86-pro/Autounattend.xml",
        "floppy/00-run-all-scripts.cmd",
        "floppy/install-winrm.cmd",
        "floppy/fixnetwork.ps1",
        "floppy/powerconfig.bat",
        "floppy/01-install-wget.cmd",
        "floppy/_download.cmd",
        "floppy/_packer_config.cmd",
        "floppy/passwordchange.bat",
        "floppy/networkprompt.bat",
        "floppy/openssh.bat",
        "floppy/zz-start-sshd.cmd",
        "floppy/oracle-cert.cer"
      ],
      "shutdown_command": "{{ user `shutdown_command`}}",
      "disk_size": 40960,
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "1536"],
        ["modifyvm", "{{.Name}}", "--cpus", "1"]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "remote_path": "/tmp/script.bat",    
      "execute_command": "{{.Vars}} cmd /c C:/Windows/Temp/script.bat",
      "scripts": [        
        "custom/boot.cmd",
        "custom/selenium.bat"
      ]
    },
    {
      "type": "shell",
      "inline": ["rm -f /tmp/script.bat"]
    }
  ]
}
